{
  "presets": [
    "es2015",
    "stage-0",
    "react"
  ],
  "plugins": [
    ["transform-runtime", {
      "polyfill": false,
      "regenerator": true
    }],
    "react-hot-loader/babel",
    ["babel-root-import", {
      "rootPathSuffix": "src"
    }]
  ],
  "env": {
    "production": {
      "presets": ["react-optimize"]
    }
  }
}
