{
  "name": "koa2-redux-universal",
  "version": "1.0.0",
  "description": "koa2 redux universal for pure server side rendering",
  "scripts": {
    "dev": "better-npm-run dev",
    "compile": "better-npm-run compile",
    "build:client": "npm run clear:client && better-npm-run build:client",
    "build:prod": "npm run clear:prod && npm run compile && npm run build:client",
    "clear:prod": "rimraf dist",
    "clear:client": "rimraf dist/server/static",
    "serve": "better-npm-run serve",
    "now-build": "yarn build:prod",
    "now-start": "yarn serve",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "prettier --write",
      "git add"
    ]
  },
  "betterScripts": {
    "dev": {
      "command": "babel-node bin/server",
      "env": {
        "NODE_ENV": "development",
        "HOST": "localhost",
        "PORT": "8000",
        "ENTRY": "src",
        "ENABLE_SSR": 0
      }
    },
    "serve": {
      "command": "node bin/server",
      "env": {
        "NODE_ENV": "production",
        "HOST": "localhost",
        "PORT": "8000",
        "ENTRY": "dist",
        "ENABLE_SSR": 1
      }
    },
    "build:client": {
      "command": "webpack --profile --colors --progress --config ./webpack/prod.js",
      "env": {
        "NODE_ENV": "production"
      }
    },
    "compile": {
      "command": "babel src -d dist --ignore '/client/' --copy-files && cp -r src/client dist",
      "env": {
        "NODE_ENV": "production"
      }
    }
  },
  "engines": {
    "node": ">=8"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^7.1.2",
    "babel-cli": "^6.24.1",
    "babel-core": "^6.25.0",
    "babel-eslint": "^7.2.3",
    "babel-loader": "^7.1.1",
    "babel-plugin-module-resolver": "^3.0.0",
    "babel-plugin-react-css-modules": "^3.3.2",
    "babel-plugin-system-import-transformer": "^3.1.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-react-optimize": "^1.0.1",
    "babel-preset-stage-0": "^6.24.1",
    "babel-runtime": "^6.23.0",
    "better-npm-run": "^0.0.14",
    "co": "^4.6.0",
    "css-loader": "^0.28.4",
    "ejs": "^2.5.6",
    "eslint": "^5.9.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-import-resolver-babel-module": "^4.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-prettier": "^3.0.0",
    "eslint-plugin-react": "^7.11.1",
    "husky": "^0.14.3",
    "lint-staged": "^6.0.0",
    "mkdirp": "^0.5.1",
    "postcss-loader": "^2.0.6",
    "precss": "^2.0.0",
    "prettier": "^1.10.2",
    "raw-loader": "^0.5.1",
    "rimraf": "^2.6.1",
    "style-loader": "^0.18.2"
  },
  "dependencies": {
    "better-npm-run": "^0.0.14",
    "chokidar": "^1.7.0",
    "chunk-manifest-webpack2-plugin": "^1.0.1",
    "css-modules-require-hook": "^4.2.2",
    "es6-promise": "^4.1.1",
    "extract-text-webpack-plugin": "^3.0.2",
    "history": "^4.7.2",
    "html-webpack-harddisk-plugin": "^0.1.0",
    "html-webpack-inline-chunk-plugin": "^1.1.1",
    "html-webpack-plugin": "^2.29.0",
    "inline-chunk-manifest-html-webpack-plugin": "^0.1.0",
    "isomorphic-fetch": "^2.2.1",
    "koa": "^2.4.1",
    "koa-logger": "^3.0.1",
    "koa-onerror": "^3.0.2",
    "koa-router": "^7.2.1",
    "koa-static": "^4.0.0",
    "koa-views": "^6.0.2",
    "koa-webpack": "^2.0.3",
    "preload-webpack-plugin": "^2.2.0",
    "prop-types": "^15.5.8",
    "react": "^16.1.1",
